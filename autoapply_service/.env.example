# AutoApply Service - Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# Server Configuration
# ======================
PORT=8084
HOST=0.0.0.0

# ======================
# Database Configuration
# ======================
# PostgreSQL connection string (same database as auth_service)
DATABASE_URL=postgres://postgres:your-password@db.your-project.supabase.co:5432/postgres?sslmode=require

# ======================
# Auth Service
# ======================
# URL of the auth_service for fetching user profiles
AUTH_SERVICE_URL=http://localhost:8082

# ======================
# CV Generator Service
# ======================
# URL of the cv_generator for generating CVs
CV_GENERATOR_URL=http://localhost:8083

# ======================
# Gemini AI Configuration
# ======================
# API key from Google AI Studio (required)
GEMINI_API_KEY=your-gemini-api-key-here

# Model to use (default: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# Temperature for generation (0.0-2.0, higher = more creative)
GEMINI_TEMPERATURE=0.7

# ======================
# Email - SMTP Configuration
# ======================
# For sending applications via email
# Use your SMTP provider (Gmail, SendGrid, Mailgun, etc.)

# Gmail SMTP example:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# ======================
# Google OAuth (for Gmail API)
# ======================
# Optional: For sending emails via user's Gmail account
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ======================
# Web Automation
# ======================
# Path to Chrome/Chromium (optional, auto-detected)
CHROME_PATH=

# Delay between automation actions in milliseconds (for rate limiting)
AUTOMATION_DELAY_MS=2000

# Maximum retry attempts for failed applications
MAX_RETRIES=3

# ======================
# Rate Limiting
# ======================
# Maximum applications per hour per user
RATE_LIMIT_PER_HOUR=20

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=json
