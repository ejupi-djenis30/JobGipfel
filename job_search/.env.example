# Job Search Service - Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# Server Configuration
# ======================
PORT=8085
HOST=0.0.0.0

# ======================
# Database Configuration
# ======================
# PostgreSQL connection string (same database as other services)
DATABASE_URL=postgres://postgres:your-password@db.your-project.supabase.co:5432/postgres?sslmode=require

# ======================
# Auth Service
# ======================
AUTH_SERVICE_URL=http://localhost:8082

# ======================
# Gemini AI Configuration
# ======================
# API key from Google AI Studio (required for AI search)
GEMINI_API_KEY=your-gemini-api-key-here

# Model for query parsing
GEMINI_MODEL=gemini-2.0-flash

# Model for embeddings (semantic search)
EMBEDDING_MODEL=text-embedding-004

# Temperature for generation (lower = more focused)
GEMINI_TEMPERATURE=0.3

# ======================
# Search Configuration
# ======================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=json
