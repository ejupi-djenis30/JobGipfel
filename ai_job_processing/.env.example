# AI Job Processing Service - Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# Server Configuration
# ======================
PORT=8081
HOST=0.0.0.0

# ======================
# Database Configuration
# ======================
# PostgreSQL connection string (same as scrapper)
DATABASE_URL=postgres://postgres:your-password@db.your-project.supabase.co:5432/postgres?sslmode=require

# ======================
# Gemini AI Configuration
# ======================
# API key from Google AI Studio (required)
GEMINI_API_KEY=your-gemini-api-key-here

# Model to use (default: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# Temperature for generation (0.0-2.0, lower = more deterministic)
GEMINI_TEMPERATURE=0.3

# ======================
# Language Configuration
# ======================
# Target languages for translation (comma-separated ISO 639-1 codes)
# Default: German, French, Italian, English
TARGET_LANGUAGES=de,fr,it,en

# Source language detection (auto-detect if empty)
SOURCE_LANGUAGE=

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ======================
# Rate Limiting (optional)
# ======================
# Requests per minute per IP (0 = disabled)
RATE_LIMIT_RPM=60
